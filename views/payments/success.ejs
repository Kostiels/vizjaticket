<div class="container text-center mt-5">
    <div class="card shadow-lg border-0 p-5">
        <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
        </div>
        <h1 class="mb-4">Płatność zakończona pomyślnie!</h1>
        
        <% if (reservation) { %>
            <p class="mb-4">Dziękujemy za zakup biletów na wydarzenie <strong><%= reservation.event.title %></strong>.</p>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Szczegóły zamówienia</h5>
                    <div class="row text-start">
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Numer zamówienia:</strong> <%= reservation.reservationCode %></p>
                            <p class="mb-2"><strong>Data zakupu:</strong> <%= new Date().toLocaleDateString('pl-PL') %></p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Kwota:</strong> <%= reservation.totalPrice %> <%= reservation.currency %></p>
                            <p class="mb-2"><strong>Status:</strong> <span class="badge bg-success">Opłacone</span></p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="d-flex justify-content-center gap-3">
                <a href="/reservations/<%= reservation._id %>" class="btn btn-primary">
                    <i class="fas fa-ticket-alt me-2"></i>Zobacz bilety
                </a>
                <a href="/events" class="btn btn-outline-primary">
                    <i class="fas fa-calendar-alt me-2"></i>Przeglądaj wydarzenia
                </a>
            </div>
        <% } else { %>
            <p class="mb-4">Twoja płatność została zrealizowana pomyślnie.</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="/reservations" class="btn btn-primary">
                    <i class="fas fa-ticket-alt me-2"></i>Moje rezerwacje
                </a>
                <a href="/" class="btn btn-outline-primary">
                    <i class="fas fa-home me-2"></i>Strona główna
                </a>
            </div>
        <% } %>
    </div>
</div>
